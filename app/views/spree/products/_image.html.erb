<% if image %> 
  <%= link_to image_tag(image.attachment.url(:product), :itemprop => "image"), image.attachment.url(:original), :class => 'fancybox' %>
<% else %>
  <%= link_to product_image(@product, :itemprop => "image"), @product.images.first.attachment.url(:original), :class => 'fancybox' %>
<% end %>
